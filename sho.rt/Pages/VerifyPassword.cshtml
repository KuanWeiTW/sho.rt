@page "{shortenedUrl?}"
@model VerifyPasswordModel
@{
    ViewData["Title"] = "sho.rt";
}

<div class="row justify-content-center">
    <div class="col-8">@Model.ErrorMessage</div>
    <div class="col-8">
        <form method="post">
            <input type="hidden" name="shortenedUrl" value="@Model.ShortenedUrl" />
            <div class="form-group" id="password_input_group">
                <label>Password:</label>
                <input class="form-control" name="password" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" />
            </div>
        </form>
    </div>
</div>

